@namespace BlazorFabric
@inherits MaskTextFieldBase
@using Microsoft.AspNetCore.Components.Web

<TextField Required=@Required
           Multiline=@Multiline
           InputType=@InputType
           Resizable=@Resizable
           AutoAdjustHeight=@AutoAdjustHeight
           Underlined=@Underlined
           Borderless=@Borderless
           Label=@Label
           Description=@Description
           Prefix=@Prefix
           Suffix=@Suffix
           DefaultValue=@DefaultValue
           Value=@DisplayValue
           Disabled=@Disabled
           ReadOnly=@ReadOnly
           ErrorMessage=@ErrorMessage
           ValidateOnFocusIn=@ValidateOnFocusIn
           ValidateOnFocusOut=@ValidateOnFocusOut
           ValidateOnLoad=@ValidateOnLoad
           DeferredValidationTime=@DeferredValidationTime
           AutoComplete=@AutoComplete
           Placeholder=@Placeholder
           IconName=@IconName

           OnInput=OnTextFieldInput
           OnFocus=OnTextFieldFocus
           OnBlur=OnTextFieldBlur
           OnKeyDown=OnTextFieldKeyDown
           OnMouseDown=OnTextFieldMouseDown
           OnMouseUp=OnTextFieldMouseUp
           OnPaste=OnTextFieldPaste
           @attributes="@UnknownParameters"
           @ref="textFieldComponent">
            <RenderLabel>
                @RenderLabel
            </RenderLabel>
</TextField>
