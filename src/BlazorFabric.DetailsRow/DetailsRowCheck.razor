@namespace BlazorFabric
@inherits FabricComponentBase

<GlobalCS Component=@this CreateGlobalCss=@CreateGlobalCss />

@if (CanSelect)
{
    <div role="checkbox"
         class=@($"smallFont ms-DetailsRow-check ms-Check-checkHost{(IsHeader ? " is-header" : "")}{(IsVisible ? " is-visible" : "")}{(Checked ? " is-checked" : "")}{(CanSelect ? " can-select" : "")}")
         aria-checked=@Selected
         data-selection-toggle="true"
         data-automationid="DetailsRowCheck">
            <Check UseFastIcons=@UseFastIcons Checked=@Checked />
    </div>
}
else
{
    <div class="ms-DetailsRowCheck ms-DetailsRowCheck-check" />
}