@inherits  CalloutBase

@if (this.DoNotLayer)
{

}
else
{
    <BlazorFabric.Layer.Layer >
        <div class="ms-Callout-container" ref="RootElementRef" id="host" >
            <div class=@($"ms-Callout mediumFont")
                 id="callout"
                 ref="calloutRef"
                 style=@($"top:{Position.top}px;left:{Position.left}px; {(this.Hidden ? "visibility: hidden;" : "")} {(CalloutWidth > 0?"width: " + CalloutWidth + "px":"")} {(CalloutMaxWidth > 0?"maxWidth: " + CalloutMaxWidth + "px":"")}")>
                @if(this.IsBeakVisible)
                {
                    <div class="ms-Callout-beak" style=@($"width:{BeakWidth}px; height:{BeakWidth}px; {(BackgroundColor != null ? "background-color:"+BackgroundColor+";" : "")}")/>
                    <div class="ms-Callout-beakCurtain" />
                }
                <BlazorFabric.Popup.Popup AriaLabel=@AriaLabel
                                          AriaDescribedBy=@AriaDescribedBy
                                          AriaLabelledBy=@AriaLabelledBy
                                          ClassName="ms-Callout-main"
                                          ShouldRestoreFocus="true"
                                          Style=@($"max-height: {contentMaxHeight}px;{(overflowYHidden ? "overflow-y: hidden;" : "")} {(BackgroundColor != null ? "background-color:"+BackgroundColor+";" : "")}")>
                    @ChildContent
                </BlazorFabric.Popup.Popup>
            </div>
        </div>
    </BlazorFabric.Layer.Layer>
}
                