@namespace BlazorFabric
@inherits CalloutBase

@if (this.DoNotLayer)
{
    <CalloutContent AlignTargetEdge=@AlignTargetEdge
                    AriaDescribedBy=@AriaDescribedBy
                    AriaLabel=@AriaLabel
                    AriaLabelledBy=@AriaLabelledBy
                    BackgroundColor=@BackgroundColor
                    BeakWidth=@BeakWidth
                    Bounds=@Bounds
                    CalloutMaxWidth=@CalloutMaxWidth
                    CalloutWidth=@CalloutWidth
                    ChildContent=@ChildContent
                    ClassName=@ClassName
                    CoverTarget=@CoverTarget
                    DirectionalHint=@DirectionalHint
                    DirectionalHintFixed=@DirectionalHintFixed
                    DoNotLayer=@DoNotLayer
                    FabricComponentTarget=@FabricComponentTarget
                    GapSpace=@GapSpace
                    HiddenChanged=@HiddenChanged
                    IsBeakVisible=@IsBeakVisible
                    MinPagePadding=@MinPagePadding
                    OnDismiss=@OnDismiss
                    PreventDismissOnLostFocus=@PreventDismissOnLostFocus
                    PreventDismissOnResize=@PreventDismissOnResize
                    PreventDismissOnScroll=@PreventDismissOnScroll
                    />
}
else
{
<BlazorFabric.Layer>
    <CalloutContent AlignTargetEdge=@AlignTargetEdge
                    AriaDescribedBy=@AriaDescribedBy
                    AriaLabel=@AriaLabel
                    AriaLabelledBy=@AriaLabelledBy
                    BackgroundColor=@BackgroundColor
                    BeakWidth=@BeakWidth
                    Bounds=@Bounds
                    CalloutMaxWidth=@CalloutMaxWidth
                    CalloutWidth=@CalloutWidth
                    ChildContent=@ChildContent
                    ClassName=@ClassName
                    CoverTarget=@CoverTarget
                    DirectionalHint=@DirectionalHint
                    DirectionalHintFixed=@DirectionalHintFixed
                    DoNotLayer=@DoNotLayer
                    FabricComponentTarget=@FabricComponentTarget
                    GapSpace=@GapSpace
                    HiddenChanged=@HiddenChanged
                    IsBeakVisible=@IsBeakVisible
                    MinPagePadding=@MinPagePadding
                    OnDismiss=@OnDismiss
                    PreventDismissOnLostFocus=@PreventDismissOnLostFocus
                    PreventDismissOnResize=@PreventDismissOnResize
                    PreventDismissOnScroll=@PreventDismissOnScroll />
</BlazorFabric.Layer>
}
