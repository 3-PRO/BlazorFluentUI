@using Microsoft.AspNetCore.Components.Web

<div class=@("mediumFont ms-Overlay " + (IsDarkThemed ? "ms-Overlay--dark" : "")) 
     @onclick="OnClick"/>

@code{
    [Parameter]
    public bool IsDarkThemed { get; set; } = false;

    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; }
}