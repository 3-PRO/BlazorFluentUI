@using Microsoft.AspNetCore.Components.Web

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">BlazorFabric.Test.HostedClient</a>
    <button class="navbar-toggler" @onclick=@ToggleNavMenu>
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<Nav>
    <NavLinkGroup Name="Basic Controls" CollapseByDefault="false">
        <NavFabricLink Name="Basic" Url="/" Id="/" Icon="ButtonControl" />
        <NavFabricLink Name="Dropdown" Url="/dropdownPage" Id="dropdownPage" Icon="Dropdown" />
        <NavFabricLink Name="Rating" Url="/ratingPage" Id="ratingPage" Icon="FavoriteStar" />
        <NavFabricLink Name="TextField" Url="/textFieldPage" Id="textFieldPage" Icon="TextField" />
    </NavLinkGroup>
    <NavLinkGroup Name="Items & Lists" CollapseByDefault="false">
        <NavFabricLink Name="List" Url="/listPage" Id="listPage" Icon="List" />
    </NavLinkGroup>
    <NavLinkGroup Name="Commands, Menus & Navs" CollapseByDefault="false">
        <NavFabricLink Name="CommandBar" Url="/commandBarPage" Id="commandBarPage" Icon="Bar" />
        <NavFabricLink Name="ContextualMenu" Url="/contextualMenuPage" Id="contextualMenuPage" Icon="Menu" />
        <NavFabricLink Name="Nav" Url="/navPage" Id="navPage" Icon="SecondaryNav" />
        <NavFabricLink Name="OverflowSet" Url="/overflowSetPage" Id="overflowSetPage" Icon="More" />
    </NavLinkGroup>
    <NavLinkGroup Name="Surfaces" CollapseByDefault="false">
        <NavFabricLink Name="Callout" Url="/calloutPage" Id="calloutPage" Icon="" />
        <NavFabricLink Name="Dialog" Url="/dialogPage" Id="dialogPage" Icon="" />
        <NavFabricLink Name="Modal" Url="/modalPage" Id="modalPage" Icon="" />
    </NavLinkGroup>
    <NavLinkGroup Name="Utilities" CollapseByDefault="false">
        <NavFabricLink Name="Layer" Url="/layerPage" Id="layerPage" Icon="" />
        <NavFabricLink Name="ResizeGroup" Url="/resizeGroupPage" Id="resizeGroupPage" Icon="Resize" />
    </NavLinkGroup>
</Nav>

